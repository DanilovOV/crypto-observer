{
	"printWidth": 80,
	"tabWidth": 2,
	"arrowParens": "always",
	"semi": false,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"singleQuote": true,
	"singleAttributePerLine": true,
	"experimentalTernaries": true,

	"overrides": [
		{
			"files": "*.html",
			"options": {
				"singleAttributePerLine": false
			}
		}
	]
}
